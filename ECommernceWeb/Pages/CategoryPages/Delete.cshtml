@page
@model ECommernceWeb.Pages.CategoryPages.DeleteModel
@{
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Category.Name" ></label>
            <input asp-for="Category.Name" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder" ></label>
            <input asp-for="Category.DisplayOrder" class="form-control" disabled/>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-primary" style="width:150px">Back</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}