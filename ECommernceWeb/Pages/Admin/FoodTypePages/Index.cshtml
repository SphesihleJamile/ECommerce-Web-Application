@page
@model ECommerceWeb.Pages.Admin.FoodTypePages.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Food Type List
            </h2>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Create New Food Type
            </a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.FoodType)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-2">
                            <i class="bi bi-pen"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>