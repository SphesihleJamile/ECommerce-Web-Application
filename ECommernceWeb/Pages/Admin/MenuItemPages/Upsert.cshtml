@page
@model ECommerceWeb.Pages.Admin.Upsert.UpsertModel
@{
}

<form method="post" enctype="multipart/form-data"> @*"enctype should be added when you're working with images in yout RazorPages'"*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">
                @(Model.MenuItem.Id != 0 ? "Update" : "Create") Menu Item
            </h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="MenuItem.Name"></label>
            <input asp-for="MenuItem.Name" class="form-control" />
            <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MenuItem.Decription"></label>
            <textarea asp-for="MenuItem.Decription" class="form-control">
            </textarea>
            <span asp-validation-for="MenuItem.Decription" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MenuItem.Price"></label>
            <input asp-for="MenuItem.Price" type="number" class="form-control" />
            <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MenuItem.ImagePath"></label>
            <input type="file" name="files" id="uploadBox" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="MenuItem.CategoryId"></label>
            <select asp-for="MenuItem.CategoryId" asp-items="Model.CategoryList" class="form-select">
                <option disabled selected>- Select Category -</option>
            </select>
            <span asp-validation-for="MenuItem.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MenuItem.FoodTypeId"></label>
            <select asp-for="MenuItem.FoodTypeId" asp-items="Model.FoodTypeList" class="form-select">
                <option disabled selected>- Select Food Type -</option>
            </select>
            <span asp-validation-for="MenuItem.FoodTypeId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success" style="width:150px;">Create</button>
        <a asp-page="Index" class="btn btn-primary" style="widthL150pxl">Back</a>
    </div>
</form>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
            toolbar_mode: 'floating'
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}